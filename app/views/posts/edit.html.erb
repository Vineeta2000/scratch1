<h1>Edit Post </h1>
<%= form_with model: @post, url: post_path, method: :put do |form| %>
<div><strong>
	<%= form.label :caption %> ~<br> </strong>
	<%= form.text_field :caption %>
</div>
<div class="field">
    <%= form.file_field :avatar ,multiple: true %>
  </div>
<div>
	<%= form.submit "Update" %>
</div>
<% end %>
<%= link_to "Back" , root_path %>
