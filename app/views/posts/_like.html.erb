 <% if comment.likes.map(&:user_id).include?(current_user.id) %>
 <%= button_to "Dislike" ,like_dislike_posts_path(comment_id: comment.id ,like: false ), method: :delete , remote: true %> 
 <% else %>
    <%= button_to "Like" , like_dislike_posts_path(comment_id: comment.id ,like: true ), method: :post , remote: true %>
 <% end %>
